                <stop offset="1" stop-color="#701A75"></stop>
              </linearGradient>
            </defs>
          </svg>
        </span>
      </a>
    </div>
    <div class="absolute bottom-10 rounded-lg px-4 py-2 bg-black/10 border border-black shadow-lg shadow-fuchsia-500/5">
      <div class="text-purple-600 font-mono text-sm">
        <span id="animated-text"></span>
        <span class="animate-pulse text-fuchsia-500">|</span> 
      </div>
    </div>
</div>
  <div class="w-1/2">
    <!-- End the icons -->
    <Wave />
  </div>
</div>

<script>
  const text = "> console.log('Bienvenido');";
  let index = 0;
  const animatedText = document.getElementById('animated-text');

  function type() {
    if (index < text.length) {
      animatedText.textContent += text.charAt(index);
      index++;
      setTimeout(type, 100);
    }
  }
  type();
</script>